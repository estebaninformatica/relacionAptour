<h1>Listing relations</h1>

<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>Table</th>
      <th>Id aero</th>
      <th>Id aptour</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @relations.each do |relation| %>
      <tr>
        <td><%= relation.table_id %></td>
        <td><%= relation.id_aero %></td>
        <td><%= relation.id_aptour %></td>
        <td><%= link_to 'Show', relation %></td>
        <td><%= link_to 'Edit', edit_relation_path(relation) %></td>
        <td><%= link_to 'Destroy', relation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table> 
<br>

<%= link_to 'New Relation', new_relation_path %>
  
  <!-- Forms
      ================================================== -->
      <div class="bs-docs-section">
        <div class="row">
          <div class="col-lg-12">
            <div class="page-header">
              <h1 id="forms">Nuevas</h1>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-lg-6">
            <div class="well bs-component">
              <%= form_tag relations_import_path, multipart: true do %>
              <form class="form-horizontal">
                <fieldset>
                  <legend>Importar</legend>
        
        
                  <div class="form-group">
                    <label for="select" class="col-lg-2 control-label">Selects</label>
                    <div class="col-lg-10">
                      <%= select(:table,"id", Table.all.collect {|p| [ p.name, p.id ] }, {include_blank: 'None'}, {class: "form-control"}) %>
                    </div>
                  </div>

                  <div class="form-group">
                    <label for="select" class="col-lg-2 control-label">Archivo</label>
                    <div class="col-lg-10">
                      <%= file_field_tag :file %>
                    </div>
                  </div>

                    

                  <div class="form-group">
                    <div class="col-lg-10 col-lg-offset-2">
                      <button class="btn btn-default">Cancel</button>
                      <%= submit_tag "Import",class:"btn btn-primary" %>
                    </div>
                  </div>
                </fieldset>
              </form>
              <% end %>
            </div>
          </div>
          <div class="col-lg-4 col-lg-offset-1">

  

          </div>
        </div>
      </div>

